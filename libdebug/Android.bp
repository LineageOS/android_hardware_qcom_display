cc_library_shared {

    name: "libdisplaydebug",
    defaults: ["qtidisplay_common_defaults"],
    sanitize: {
        integer_overflow: true,
    },
    vendor: true,

    shared_libs: ["libdl"],
    cflags: [
        "-DLOG_TAG=\"SDM\"",
        "-Wall",
        "-Werror",
        "-Wno-format",
        "-fno-operator-names",
    ],
    export_include_dirs: ["."],
    clang: true,
    srcs: ["debug_handler.cpp"],
}
