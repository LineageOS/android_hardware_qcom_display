cc_library_shared {
    name: "libqdutils",
    defaults: ["qtidisplay_defaults"],
    vendor: true,
    export_include_dirs: ["."],
    header_abi_checker: {
        enabled: true,
    },
    header_libs: [
        "libhardware_headers",
        "libutils_headers",
    ],
    shared_libs: [
        "libbinder",
        "libqservice",
        "libgralloctypes",
        "android.hardware.graphics.common@1.2",
        "android.hardware.graphics.mapper@4.0",
        "libhidlbase",
    ],
    cflags: [
        "-DLOG_TAG=\"qdutils\"",
        "-Wno-format",
        "-Wno-sign-conversion",
    ],
    srcs: [
        "qd_utils.cpp",
        "display_config.cpp",
    ],
    sanitize: {
        misc_undefined: [
            "signed-integer-overflow",
            "unsigned-integer-overflow",
        ],
    },
}
