	name: "qtidisplay_prebuilt_defaults",
	module_type: "cc_defaults",
	config_namespace: "qtidisplay",
	bool_variables: [
		"var1",
		"var2",
		"var3",
	],
	properties: [
		"enabled",
	],
}

qtidisplay_prebuilt_defaults {
	name: "qtidisplay_prebuilt_var1_defaults",
	soong_config_variables: {
		var1 : {
			enabled: true,
			conditions_default: {
				enabled: false,
			},
		},
	},
